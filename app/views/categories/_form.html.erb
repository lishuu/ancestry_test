
<%= form_for(@category, remote: true, :html => { :role => "form" }) do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">

  </div>
  
  <%= hidden_field_tag 'pnode', '1'  %>
  <%= hidden_field_tag 'nodetype', '1' %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :name, "名称", :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control first_input"  %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :code, "编码", :class => "control-label" %>
        <%= f.text_field :code, :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= f.submit  @category.new_record? ? "保存数据" : "更新数据", :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>

