<%= form_for(@customer, remote: true, :html => {:role => "form"}) do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">
  </div>

  <div class="form-group">
    <%= f.label :name, "业主名称", :class => "control-label" %>
    <%= f.text_field :name, :class => "form-control first_input" %>
  </div>

  <div class="form-group">
    <%= f.label :remark, "备注信息", :class => "control-label" %>
    <%= f.text_area :remark, rows: 10, :id => "remark_area",:class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :order_num, "排序码", :class => "control-label" %>
    <%= f.text_field :order_num, :class => "form-control" %>
  </div>

  <%= f.submit @meter_status.new_record? ? "保存数据" : "更新数据", :class => "btn btn-primary" %>

<% end %>